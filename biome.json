{
	"$schema": "https://biomejs.dev/schemas/1.6.1/schema.json",
	"organizeImports": {
		"enabled": true
	},
	"files": {
		"ignore": ["**/*/dist", "node_modules/**/*"]
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"suspicious": {
				"noExplicitAny": "off"
			}
		}
	},
	"formatter": {
		"lineWidth": 140
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "single"
		}
	}
}
