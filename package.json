{
  "name": "cosmoosjs",
  "scripts": {
    "test": "bunx turbo run test",
    "build": "bunx turbo run build",
    "version": "bunx changeset version",
    "publish": "bunx changeset publish",
    "lint": "bunx biome check ./packages",
