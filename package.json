  "engines": {
    "node": ">=20.11.0"
  },
  "workspaces": ["packages/*"],
  "devDependencies": {
    "@biomejs/biome": "1.6.1",
    "@changesets/cli": "^2.27.1",
    "husky": "^9.0.11",
    "tsup": "^8.0.2"
  }
}
