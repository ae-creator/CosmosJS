{
	"compilerOptions": {
		"lib": ["ES2022"],
		"target": "ES2022",
		"module": "ES2022",
		"moduleDetection": "force",
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		// Bundler mode
		"moduleResolution": "bundler",
		"allowImportingTsExtensions": true,
		"noEmit": true,
		// Best practices
		"strict": true,
		"skipLibCheck": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"noFallthroughCasesInSwitch": true,
		"outDir": "./dist",
		"baseUrl": ".",
		"types": ["bun", "node", "reflect-metadata"],
		"paths": {
			"@guards/*": ["./src/guards/*"],
			"@decorators/*": ["./src/decorators/*"],
			"@enums/*": ["./src/enums/*"],
			"@ioc/*": ["./src/ioc/*"],
			"@middlewares/*": ["./src/middlewares/*"],
			"@server/*": ["./src/server/*"],
			"@start/*": ["./src/start/*"],
			"@types/*": ["./src/types/*"],
			"@utils/*": ["./src/utils/*"]
		}
	},
	"include": ["src"]
}
